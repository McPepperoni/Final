@using MVC.Areas.Product

@model IndexModel

@{

}

<div class="mt-4 px-5 d-grid product-container">
    @foreach (var (item, i) in Model.Data.Data.Select((x, i) => (x, i)))
    {
        <div class="col-sm h-100 w-100">
            <form method="post" class="card shadow-sm w-100 h-100 product-item" asp-route-id="@item.Id" asp-area="Product" asp-page-handler="AddToCart" asp-route-index="@i">
                <img class="card-img-top" src="@item.ImgSrc" alt="Card image cap">
                <div class="card-body w-100 align-items-start d-flex flex-column product-card justify-content-between">
                    <h5 class="card-title w-100">@item.Name</h5>
                    <div class="w-100 d-flex flex-column">
                        <div class="d-flex flex-column category-container mt-3 mb-1">
                            @foreach (var category in item.Categories.Take(3))
                            {
                                <span class="text-muted">@category.Category.Name</span>
                            }
                        </div>
                        <div class="w-100">
                            <div class="w-100 d-flex justify-content-between align-items-center mb-3">
                                <p class="card-text mb-0">@item.Price.ToString("N0") Ä‘</p>
                                        <div class="form-group col-md-4">
                                    <input asp-for="Input.ProductsQuantity" type="number" class="form-control rounded" value="1"/>
                                </div>
                            </div>
                            <button class="btn btn-danger w-100" type="submit">
                                <i class="fa-solid fa-cart-plus"></i>
                                Add to cart
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }

</div>