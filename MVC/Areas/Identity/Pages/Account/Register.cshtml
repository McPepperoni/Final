@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row container">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.User.Email">Email</label>
                <span asp-validation-for="Input.User.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.User.Password">Password</label>
                <span asp-validation-for="Input.User.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.User.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.User.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.FullName" class="form-control" autocomplete="new-full-name" aria-required="true" placeholder="Full name" />
                <label asp-for="Input.User.FullName">Full name</label>
                <span asp-validation-for="Input.User.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.PhoneNumber" class="form-control" autocomplete="new-full-name" aria-required="true" placeholder="Full name" />
                <label asp-for="Input.User.PhoneNumber">PhoneNumber</label>
                <span asp-validation-for="Input.User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.User.Address" class="form-control" autocomplete="new-address" aria-required="true" placeholder="Address" />
                <label asp-for="Input.User.Address">Address</label>
                <span asp-validation-for="Input.User.Address" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
