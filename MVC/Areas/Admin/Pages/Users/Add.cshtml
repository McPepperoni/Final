@page
@using MVC.Areas.Admin.Pages.Users
@model AddModel

@{
    ViewData["Title"] = "Users add";
}

<div class="d-flex justify-content-center align-items-center flex-column w-100 mt-5">
    
  <div class="d-flex w-100 edit-container mt-5 border rounded p-5">
    <div class="d-flex flex-column w-50">
        <div class="w-100 rounded p-1 item-img p-5">
            <img
            src="~/assets/cover.jpg"
            alt="profile-img" class="rounded shadow">
        </div>
    </div>
    <form class="flex flex-column w-50" method="post" id="user-add-form">
        <div class="d-flex flex-column mx-3 justify-content-center h-100">
    @Html.ValidationMessage("Existed", new {@class = "text-danger mb-3"})
            <div class="d-flex flex-column mb-5">
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Email</span>
                        </div>
                        <input required asp-for="Input.User.Email" type="email" class="form-control" placeholder="Email" aria-label="Address" aria-describedby="basic-addon1" id="email-input">
                    </div>
                    <span asp-validation-for="Input.User.Email" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Password</span>
                        </div>
                        <input required asp-for="Input.User.Password" type="password" class="form-control" placeholder="Password" aria-label="Address" aria-describedby="basic-addon1" id="password-input">
                    </div>
                    <span asp-validation-for="Input.User.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">ReEnterPassword</span>
                        </div>
                        <input required asp-for="Input.User.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" aria-label="Address" aria-describedby="basic-addon1" id="email-input">
                    </div>
                    <span asp-validation-for="Input.User.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Full Name</span>
                        </div>
                        <input required asp-for="Input.User.FullName" type="text" class="form-control" placeholder="Fullname" aria-label="Fullname" aria-describedby="basic-addon1" id="full-name-input">
                    </div>
                    <span asp-validation-for="Input.User.FullName" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Phone number</span>
                        </div>
                        <input required asp-for="Input.User.PhoneNumber" type="text" class="form-control" placeholder="PhoneNumber" aria-label="PhoneNumber" aria-describedby="basic-addon1" id="phone-number-input">
                    </div>
                    <span asp-validation-for="Input.User.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <div class="input-group d-flex w-100">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Address</span>
                        </div>
                        <input required asp-for="Input.User.Address" type="text" class="form-control" placeholder="Address" aria-label="Address" aria-describedby="basic-addon1" id="address-input">
                    </div>
                    <span asp-validation-for="Input.User.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-column" >
                <div class="d-flex">
                    <button type="submit" class="btn btn-success w-fit mt-5" id="">Add</button>
                    <a href="/Admin/Users" class="btn btn-danger w-fit mt-5 mx-3">Cancel</a>
                </div>
            </div>
        </div>
    </form>
  </div>
</div>

@section Scripts {
                <partial name="_ValidationScriptsPartial" />
}
